pipeline {
    agent { label 'GOL'}
    triggers {
        cron ('H * * * *')
        pollSCM ('* * * * *')
    }
    parameters {
        string(name: 'BRANCH', defaultValue: 'master', description: 'branch to build')
    }
    options {
        timeout(time:1, unit: 'HOURS')
    }
    environment {
        CI_ENV = 'TEST DEVOPS'
    }
    stages {
	stage('scm') {
        environment {
            SOMETEXT = 'TEST DEVOPS2'
        }
	     steps {
                  mail subject: 'BUILD STARTED'+env.BUILD_ID, to: 'bhupes11h@devopsqt.com', from: 'bhupesh112@devopsqt.com', body: 'THIS IS TEST'
                  git branch: "${params.BRANCH}", url: 'https://github.com/bhupesh019/game-of-life.git'
                  echo env.CI_ENV
                  echo env.SOMETEXT

	     }
	}
	stage('build') {
	     steps {
                 echo env.GIT_
                     sh 'mvn package'
                 }
                 stash includes: '**/gameoflife.war', name: 'golwar'
                 
         }
         stage('SONAR ANALYSIS'){
             steps{
                 withSonarQubeEnv('Sonar-8.9LTS'){
                     //requires SonarQube Scanner for Maven 3.2+
                     sh 'mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.7.0.1746:sonar'
                     }
                  }
         }
	}
    }
    post {
        success {
	    archive '**/*.war'
            junit '**/TEST-*.xml'
            mail subject: 'BUILD COMPLETED SUCCESSFULLY'+env.BUILD_ID, to: 'bhupes11h@devopsqt.com', from: 'bhupesh112@devopsqt.com', body: 'THIS IS TEST'
	 }
        failure{
            mail subject: 'BUILD FAILED'+env.BUILD_ID+ 'URL is'+env.BUILD_ID, to: 'bhupes11h@devopsqt.com', from: 'bhupesh112@devopsqt.com', body: 'THIS IS TEST'
        }
        always {
            echo "FINISHED"
        }
        changed {
            echo "Changed"
        }
        unstable {
             mail subject: 'BUILD UNSTABLE'+env.BUILD_ID+ 'URL is'+env.BUILD_ID, to: 'bhupes11h@devopsqt.com', from: 'bhupesh112@devopsqt.com', body: 'THIS IS TEST'
        }
    }
