pipeline {
    agent { label 'GOL'}
    triggers {
        cron ('H * * * *')
        pollSCM ('* * * * *')
    }
    stages {
	stage('scm') {
	     steps {
                  git branch: 'master', url: 'https://github.com/bhupesh019/game-of-life.git'
                  input 'continue to the next stage'

	     }
	}
	stage('build') {
	     steps {
                 sh 'mvn package'

	      }
	}
    }
    post {
        success {
	    archive '**/*.war'
            junit '**/TEST-*.xml'
	 }
    }
}